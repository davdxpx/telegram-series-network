BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TMDB_API_KEY=your_tmdb_api_key_here

# Database
# For Local Docker: mongodb://mongo:27017/tsn_bot
# For Cloud (Atlas): mongodb+srv://user:pass@cluster.mongodb.net/tsn_bot?retryWrites=true&w=majority
MONGO_URI=mongodb://mongo:27017/tsn_bot

# Redis
# For Local Docker: redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# App Settings
LOG_LEVEL=INFO
# Secret key for session/security (generate a random string)
SECRET_KEY=change_this_to_a_secure_random_string
# Base URL where the bot's WebApp is accessible (needed for absolute URLs if behind proxy)
# BASE_URL=https://your-domain.com

# Optional: List of super-admin IDs (comma separated)
ADMIN_IDS=12345678,87654321
